<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sum25.se196853.demo.controller.ComputerController">
    <center>
        <TableView fx:id="computerTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colComputerId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colModel" prefWidth="200.0" text="Model" />
                <TableColumn fx:id="colType" prefWidth="120.0" text="Type" />
                <TableColumn fx:id="colYear" prefWidth="70.0" text="Year" />
                <TableColumn fx:id="colPrice" prefWidth="100.0" text="Price" />
                <TableColumn fx:id="colManufacturer" prefWidth="150.0" text="Manufacturer" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Computer Details">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="100.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="100.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Model:" GridPane.halignment="RIGHT" />
                        <Label text="Type:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                        <TextField fx:id="txtModel" GridPane.columnIndex="1" />
                        <TextField fx:id="txtType" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Production Year:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                        <Label text="Price:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                        <TextField fx:id="txtYear" GridPane.columnIndex="3" />
                        <TextField fx:id="txtPrice" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        <Label text="Manufacturer:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                        <ComboBox fx:id="cmbManufacturer" prefWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </GridPane>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAddAction" text="Add" />
                        <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#handleUpdateAction" text="Update" />
                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDeleteAction" style="-fx-text-fill: red;" text="Delete" />
                        <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClearAction" text="Clear Form" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </bottom>
    <top>
        <Label text="Manage Computers" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
