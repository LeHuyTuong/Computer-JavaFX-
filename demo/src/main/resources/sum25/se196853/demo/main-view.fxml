<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sum25.se196853.demo.controller.MainController">
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" onAction="#handleLogoutAction" text="Logout" />
                        <!-- Add other menu items like Exit if needed -->
                        <MenuItem mnemonicParsing="false" onAction="#handleLogoutAction" text="Exit" /> <!-- Thêm nút Exit gọi cùng hàm logout -->
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <!-- Thay VBox bằng TabPane -->
        <TabPane fx:id="mainTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <!-- Tab cho Computers -->
                <Tab fx:id="computersTab" text="Computers">
                    <!-- Nội dung sẽ được load bởi MainController -->
                </Tab>
                <!-- Tab cho Manufacturers -->
                <Tab fx:id="manufacturersTab" text="Manufacturers">
                    <!-- Nội dung sẽ được load bởi MainController -->
                </Tab>
                <!-- Tạm ẩn Tab Users
                <Tab fx:id="usersTab" text="Users (Admin Only)">

                </Tab>
                 -->
            </tabs>
        </TabPane>
    </center>
</BorderPane>
