<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sum25.se196853.demo.controller.ManufacturerController">
    <center>
        <TableView fx:id="manufacturerTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="250.0" text="Name" />
                <TableColumn fx:id="colCountry" prefWidth="200.0" text="Country" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Manufacturer Details">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="80.0" prefWidth="80.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Name:" GridPane.halignment="RIGHT" />
                        <Label text="Country:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                        <TextField fx:id="txtName" GridPane.columnIndex="1" />
                        <TextField fx:id="txtCountry" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </GridPane>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAddAction" text="Add" />
                        <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#handleUpdateAction" text="Update" />
                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDeleteAction" style="-fx-text-fill: red;" text="Delete" />
                        <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClearAction" text="Clear Form" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </bottom>
    <top>
        <Label text="Manage Manufacturers" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
